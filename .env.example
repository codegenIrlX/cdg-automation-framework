# =========================
# CDG Automation Framework
# =========================
# Этот файл — пример. Создайте свой .env рядом с docker-compose.yml и заполните значения.

# --- Общие настройки приложения/тестов ---
ENVIRONMENT=

BASE_URL=https://restapi.plusofon.ru
API_TOKEN=
CLIENT_ID=10553

TIMEOUT_SECONDS=10
VERIFY_SSL=true
LOG_LEVEL=INFO

# --- Postgres ---
# Для автотестов с хоста обычно используется localhost + DB_PORT.
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sipplus
DB_USER=sipplus
DB_PASSWORD=change_me
DB_ECHO=false

# --- RabbitMQ ---
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# --- ZooKeeper / Kafka ---
ZOOKEEPER_PORT=2181

KAFKA_HOST=localhost
KAFKA_PORT=9092
KAFKA_UI_PORT=8080

# --- Camunda + Excamad (UI) ---
CAMUNDA_PORT=8088
EXCAMAD_PORT=8089

# Camunda подключается к Postgres внутри docker-сети (service name `postgres`).
CAMUNDA_JDBC_URL=jdbc:postgresql://postgres:5432/${DB_NAME}
CAMUNDA_JDBC_USER=${DB_USER}
CAMUNDA_JDBC_PASSWORD=${DB_PASSWORD}

# Разрешённые origin'ы для браузерных запросов к Camunda
CAMUNDA_CORS_ALLOWED_ORIGINS=http://localhost:${EXCAMAD_PORT},http://127.0.0.1:${EXCAMAD_PORT}